{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "ES2020",
            "dom",
            "dom.iterable"
        ],
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "incremental": false,
        "plugins": [
            {
                "name": "ts-lit-plugin",
                "strict": true
            }
        ]
    }
}
