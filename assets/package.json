{
    "scripts": {
        "tailwind:watch": "postcss --verbose -w css/main.css -o ../ohmyadmin/statics/build/main.css",
        "esbuild:watch": "esbuild js/main.ts --watch --bundle --outfile=../ohmyadmin/statics/build/main.js",
        "build": "npm run build:css && npm run build:js",
        "build:css": "NODE_ENV=production postcss css/main.css -o ../ohmyadmin/statics/build/main.css",
        "build:js": "esbuild js/main.ts --bundle --outfile=../ohmyadmin/statics/build/main.js"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.2",
        "autoprefixer": "^10.4.4",
        "cssnano": "^5.1.5",
        "esbuild": "^0.14.32",
        "postcss": "^8.4.12",
        "postcss-cli": "^9.1.0",
        "postcss-import": "^14.1.0",
        "tailwindcss": "^3.0.23",
        "vesna": "https://github.com/alex-oleshkevich/vesna.git"
    },
    "dependencies": {
        "@tailwindcss/aspect-ratio": "^0.4.0",
        "@tailwindcss/forms": "^0.5.0",
        "alpinejs": "^3.9.5",
        "axios": "^0.26.1",
        "htmx": "^0.0.2",
        "notyf": "^3.10.0"
    }
}
